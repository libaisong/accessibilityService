<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff242424">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@id/mainContiner"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:background="#ff000000"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/navHome"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:scaleType="center"
                android:src="@drawable/img_nav_home_gray" />

            <ImageView
                android:id="@id/navHot"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:scaleType="center"
                android:src="@drawable/img_nav_hot_gray" />

            <ImageView
                android:id="@id/navMine"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:scaleType="center"
                android:src="@drawable/img_nav_mine_gray" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@id/activePage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffffff"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20.0dip"
        android:visibility="gone">

        <TextView
            android:id="@id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备号"
            android:textColor="#ff000000"
            android:textSize="14.0sp" />

        <EditText
            android:id="@id/activeCode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/edit_bg"
            android:gravity="center"
            android:hint="输入激活码"
            android:inputType="textPersonName"
            android:paddingLeft="10.0dip"
            android:paddingTop="5.0dip"
            android:paddingRight="10.0dip"
            android:paddingBottom="5.0dip"
            android:text=""
            android:textColor="#ff000000"
            android:textColorHint="#ff474b4c"
            android:textSize="18.0sp" />

        <com.demacia.garen.view.ClickImageView
            android:id="@id/activeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50.0dip"
            android:src="@drawable/img_btn_ok" />
    </LinearLayout>

    <RelativeLayout
        android:id="@id/logoPage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="#ff231715"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="14.0" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_icon" />

                <TextView
                    android:id="@+id/hehe"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="10.0"
                    android:text="@string/comp_name"
                    android:textAlignment="center"
                    android:textColor="#ffffffff"
                    android:textSize="40.0sp"
                    android:gravity="center_horizontal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_word" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="15.0" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="100.0dip"
                android:background="#ffffffff" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>